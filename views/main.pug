extends layout

block content
  link(rel="stylesheet" href="/stylesheets/main.css")
  //- ここまでheadタグに含まれる
  body
    div.container.full-height
      div.row.full-height
        //- 左カラム・チャットエリア
        div.col-5.left-section
          //- 他人の投稿テンプレート#postTemplate
          div(style="display: none" data-someone='{"id": "117117", "name": "hanako"}').post#postTemplate
            div.user
              img(src="/images/girl1.jpg", alt="").icon
              p.name hanako
            div.fukidashi
              div.comment
                p(style="display: none").mention-comment.mt-3
                p(style="display: none").text-comment
                div(style="display: none").wrapper-img-comment
                  img(src="images/sukuwatto.jpg" alt="...").img-comment
          //- 自分の投稿テンプレート
          div(style="display: none" data-own='{"id": "882882", "name": "tarou"}').post.own#postOwnTemplate
            div.user.own
              img(src="/images/girl1.jpg", alt="").icon.own
              p.name tarou
            div.fukidashi.own
              div.comment
                p(style="display: none").mention-comment.mt-3
                p(style="display: none").text-comment
                div(style="display: none").wrapper-img-comment
                  img(src="images/sukuwatto.jpg" alt="...").img-comment

        //- 右カラム
        div.col-7.right-section
          div.m-1.mt-3.mb-4.d-flex.justify-content-end
            p.mr-3 userNameさん、こんにちは
            div.dropdown.mt-1
              a(href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false").dropdown-toggle
                Dropdown menu
              //- dropdownの内容
              div(aria-labelledby="dropdownMenuLink").dropdown-menu.m-2
                a(href="#").dropdown-item トップページ
                a(href="#").dropdown-item ログイン
                a(href="#").dropdown-item アカウント作成

          //- タイマー
          div.right-section-header
            h4.title 1分だけ がんばりましょ!!
            div.progress.mb-2
              div(role="progressbar" style="width: 100%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="60").progress-bar.progress-bar-striped.progress-bar-animated
          
          //- 画像エリア
          div(style="display: block;").row#img-area
            div.col-12
              div.wrapper-img-selected
                img(src="images/kubi.jpg" alt="..." style="display: none;").img-random
                img(src="images/sukuwatto.jpg" alt="..." style="display: none;").img-selected
              h5(style="display: none;").text-addition 時間があまったらやってみよう!!
              button(type="button" class="" data-toggle="modal" data-target="#modalLong").btn.btn-primary Launch demo modal
          
          //- タブズエリア
          div(style="display: none;").row#tabs-area
            //- タブズ
            div.wrapper-tabs.d-flex.justify-content-between
              ul(role="tablist").nav.nav-tabs
                li.nav-item
                  a(data-toggle="tab" href="#tab-favorite").nav-link.active お気に入り
                li.nav-item
                  a(data-toggle="tab" href="#tab-stamp").nav-link スタンプ
                li.nav-item
                  a(data-toggle="tab" href="#tab-text").nav-link テキスト
              div.at.mt-3.mr-2 @全員
            div.tab-content
              //-タブコンテンツ１
              div.col-12.tab-pane.fade.show.active#tab-favorite
                div.stamps
                  img(src="images/stamps/otsukaresama1.jpg" alt="..." ).img-thumbnail.btn-stamp
